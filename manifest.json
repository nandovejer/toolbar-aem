{
  "manifest_version": 3,
  "name": "Toolbar AEM",
  "version": "1.0.0",
  "description": "A floating toolbar for Adobe Experience Manager (AEM) that lets you quickly switch between Editor, Sites, View, and CRXDE modes.",
  "icons": {
    "128": "icon.png"
  },
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["http://localhost:4502/*", "https://*.aemcloud.net/*"],
      "js": ["index.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["http://localhost:4502/*", "https://*.aemcloud.net/*"]
}
